{% extends 'base.jinja' %}
{% block content %}

<h2>Mon Compte</h2>
<p>
    {% with messages = get_flashed_messages() %}
    {% if messages %}
        {% for message in messages %}
            {{ message }}
        {% endfor %}
    {% endif %}
    {% endwith %}
</p>
<form action="/profil/modification" method="POST">
    <fieldset style="width:450px">
        <div class="form-group">
            <label for="courriel" class="form-label mt-4">Courriel : </label>
            <input type="email" id="courriel" placeholder="Courriel" class="form-control" name="courriel" value={{session.utilisateur.email}}>
        </div>
        <div class="form-group">
            <label for="password" class="form-label mt-4">Mot de passe : </label>
            <input type="password" id="password" placeholder="Mot de passe" class="form-control" name="password">
        </div>
        <div class="form-group">
            <label for="passwordConf" class="form-label mt-4">Confirmer votre mot de passe : </label>
            <input type="password" id="passwordConf" placeholder="Confirmer votre mot de passe" class="form-control" name="passwordConf">
        </div>
        <div class="form-group">
            <label for="nom" class="form-label mt-4">Nom : </label>
            <input type="text" id="nom" placeholder="Nom" class="form-control" name="nom" value={{session.utilisateur['nom']}}>
        </div>
            <br>
            <button type="submit" class="btn btn-secondary">Modifier les informations</button>
    </fieldset>
</form>

{% endblock %}